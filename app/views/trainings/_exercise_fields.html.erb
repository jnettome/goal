<div class="nested-fields">
  <div class="form-group">
    <%= f.label :name, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-10 col-lg-offset-2">
      <div class="col-xs-2">
        <%= f.text_field :repetitions, :class => "form-control", placeholder: 'Repetições' %>
      </div>
      <div class="col-xs-2">
        <%= f.text_field :series, :class => "form-control", placeholder: 'Séries' %>
      </div>
      <div class="col-xs-2">
        <%= f.text_field :interval, :class => "form-control", placeholder: 'Intervalo' %>
      </div>
      <div class="col-xs-2">
        <%= f.text_field :weight, :class => "form-control", placeholder: 'Peso' %>
      </div>
    </div>
  </div>

  <%= link_to_remove_association "apagar exercício", f, class: 'btn btn-danger' %>
</div><hr>
