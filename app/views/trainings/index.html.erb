<div class="page-header">
  <%= link_to new_training_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Treino
  <% end %>
  <h1>Meus Treinos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Duração</th>
        <th>Tipo de Treino</th>
        <th>Exercícios</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @trainings) do |training| %>
        <td><%= training.try(:name) %></td>
        <td><%= training.try(:duration) %></td>
        <td><%= training.try(:body_group) %></td>
        <td><%= training.exercises.map(&:name).join(', ') %></td>
        <td>
          <%= link_to 'Ver', training %> |
          <%= link_to 'Editar', edit_training_path(training) %> |
          <%= link_to 'Apagar', training, method: :delete, data: { confirm: 'Você tem certeza que deseja apagar este treino?' } %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
