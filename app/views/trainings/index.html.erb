<div class="page-header">
  <%= link_to new_training_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Training
  <% end %>
  <h1>Listing trainings</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Objective</th>
        <th>Duration</th>
        <th>Schedule</th>
        <th>Body group</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @trainings) do |training| %>
        <td><%= training.name %></td>
        <td><%= training.objective %></td>
        <td><%= training.duration %></td>
        <td><%= training.schedule %></td>
        <td><%= training.body_group %></td>
        <td><%= link_to 'Show', training %></td>
        <td><%= link_to 'Edit', edit_training_path(training) %></td>
        <td><%= link_to 'Destroy', training, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
