<%= form_for(@user, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@user.errors.count, "erro", "erros") %> não permitiram seu cadastro:</h4>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, "Senha", :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.password_field :password, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirme a Senha", :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.password_field :password_confirmation, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :type, "Eu sou", :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.select :type, [["Aluno", "Student"], ["Professor", "Teacher"]] , :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :city, "Cidade/UF", :class => "col-lg-2 control-label" %>
    <div class="col-lg-8">
      <%= f.text_field :city, :class => "form-control" %>
    </div>
    <div class="col-lg-2">
      <%= f.select :state, option_estados_for_select %>
    </div>
  </div>

  <div class="form-group teacher_field">
    <%= f.label :specialty, "Especialidade", :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :specialty, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group teacher_field">
    <%= f.label :document, "CREF", :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :document, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group teacher_field">
    <%= f.label :short_bio, "Pequeno Currículo", :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :short_bio, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
