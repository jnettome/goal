<div class="page-header">
  <h1>Olá <%= current_user.name %>! <small>Esse é sua dashboard</small></h1>
</div>

<div class="row">
  <% if current_user.trainings.empty? %>
  <div class="col-lg-6">
    <div class="well">
      Você ainda não criou um treino. <br>
      <%= link_to "Crie seu primeiro treino", new_training_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <% else %>
  <div class="col-lg-6">
    <%= link_to "Meus Treinos", trainings_path, class: 'btn btn-default btn-lg btn-info btn-block' %>
  </div>
  <% end %>




  <% if 1 == 1 %>
  <div class="col-lg-6">
    <div class="well">
      <% if current_user.students.empty? %>
        Você não possui alunos associados. <br>
        <%= link_to "Buscar alunos", '#', class: 'btn btn-primary' %>
      <% else %>
        <p>Meus alunos</p>
        <ul>
        <% current_user.students.each do |student| %>
          <li><%= link_to student.name, student %></li>
        <% end %>
        </ul>
      <% end %>
    </div>
  </div>
  <% else %>
  <div class="col-lg-6 well">
    <p>Últimos relatórios enviados:</p>

    <ul>
      <li><a href="#">João dos Santos</a></li>
      <li><a href="#">Maria José de Conceição</a></li>
      <li><a href="#">Juliana Lebllof</a></li>
    </ul>
    <%= link_to "Meus Alunos", '#', class: 'btn btn-default btn-lg btn-info btn-block' %>
  </div>
  <% end %>
</div>
