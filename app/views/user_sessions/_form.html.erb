<%= form_tag user_sessions_path, :method => :post, :class => "form-horizontal" do %>
  <div class="form-group">
    <%= label_tag :email, nil, class: "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= text_field_tag :email, nil, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :password, "Senha", :class => "col-lg-2 control-label" %><br />
    <div class="col-lg-10">
      <%= password_field_tag :password, nil, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= submit_tag "Login", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
